{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Additional */
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@smallgami/engine": ["../../../smallGami/src/index.ts"],
      "react": ["./node_modules/@types/react/index.d.ts"],
      "react/*": ["./node_modules/@types/react/*"],
      "gsap": ["./node_modules/gsap/types/index.d.ts"],
      "gsap/*": ["./node_modules/gsap/types/*"],
      "lucide-react": ["./node_modules/lucide-react/dist/lucide-react.d.ts"],
      "@babylonjs/core": ["./node_modules/@babylonjs/core/index.d.ts"],
      "@babylonjs/core/*": ["./node_modules/@babylonjs/core/*"],
      "@babylonjs/havok": ["./node_modules/@babylonjs/havok/HavokPhysics.d.ts"],
      "zustand": ["./node_modules/zustand/index.d.ts"],
      "zustand/*": ["./node_modules/zustand/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
